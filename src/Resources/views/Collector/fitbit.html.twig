{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% if collector.hasApiCalls() %}
        {% set icon %}
            {{ include("@Fitbit/Icons/fitbit-icon.svg") }}
            <span class="sf-toolbar-value">Fitbit</span>
        {% endset %}

        {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { 'link': true }) }}
    {% endif %}
{% endblock %}

{% block menu %}
    <span class="label {% if not collector.hasApiCalls() %}disabled{% endif %}">
        <span class="icon">
            {{ include("@Fitbit/Icons/fitbit-icon.svg") }}
        </span>
        <strong>Fitbit</strong>
    </span>
{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
    </style>
{% endblock %}

{% block panel %}
    <h2>Fitbit</h2>
    <h3>Configuration</h3>
    <table>
        <thead>
            <tr>
                <th scope="col" class="key">Key</th>
                <th scope="col">Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>clientId</th>
                <td>{{ collector.clientId }}</td>
            </tr>
            <tr>
                <th>clientSecret</th>
                <td>{{ collector.clientSecret }}</td>
            </tr>
            <tr>
                <th>scopes</th>
                <td>{{ collector.scopes|join(', ') }}</td>
            </tr>
        </tbody>
    </table>
    <h3>API calls</h3>
    {% if not collector.hasApiCalls() %}
        <div class="empty">
            <p>No Fitbit API calls were made.</p>
        </div>
    {% else %}
        TODO
    {% endif %}
{% endblock %}
